<!DOCTYPE html>
<html>
  
  <%= render 'layouts/head' %>

  <body>
      <%= render 'layouts/header' %>
      <div class="container">
        <% flash.each do |key, value| %>
          <!--<div class="alert alert-<%#= key %>"><%#= value %></div>-->
          <%= content_tag(:div, key, class: "alert alert-#{value}") %>
        <% end %>  
        <%= yield %>
      
        <%= render 'layouts/footer' %>
        <!--调试信息-->
        <%= debug(params) if Rails.env.development? %>
      </div>  
  </body>
</html>
