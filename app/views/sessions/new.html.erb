<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :sessions, local: true) do |f| %>
      <%= f.label :email%>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control'%>
      
      <!--checkbox 和 inline，Bootstrap 使用这两个类把复选框和文本(“Remember me on this computer”)放在同一行-->
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>
      
      <%= f.submit "LOGIN", class: 'form-control' %>
    <% end %>
    
    <p>NEW USER? <%= link_to "Sign-up", signup_path %></p>
  </div>
</div>
